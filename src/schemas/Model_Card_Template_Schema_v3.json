{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Model Card Schema",
  "type": "object",
  "properties": {
    "identity_and_basic_information": {
      "type": "object",
      "properties": {
        "model_name": { "title": "Model Name", "type": "string", "default": "What is the name of the model?"},
        "version": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "default": "What is the name of the Version?" },
            "date": { "type": "string", "format": "date" },
            "model_difference": {"type": "string", "default": "What are the changes in this version?"}
          }
        },
        "overview": { "type": "string", "default": "What is the overview of the model?" },
        "citation": { "type": "string", "default": "How to cite this model " },
        "license": { "type": "string", "default": "What is the model license for use?" }
      }
    },
    "source_and_distribution": {
      "type": "object",
      "properties": {
        "dataset_name": { "type": "string", "default": "What is the name of the dataset(s) used to train the model?" },
        "dataset_link": { "type": "string", "format": "uri" },
        "open_source": { "type": "boolean", "description": "Is this model open source","default": "Is this model open source?" },
        "source_code_url": { "type": "string", "format": "uri" }
      }
    },
    "ownership_and_governance": {
      "type": "object",
      "properties": {
        "owners": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "default": "What is the name of the model?" },
            "contact": { "type": "string", "format": "email" }
          }
        }
      }
    },
    "model_architecture": {
      "type": "object",
      "properties": {
        "architecture_type": { "type": "string", "default": "What is the name of the model?" },
        "framework": { "type": "string", "default": "What is the name of the model?" },
        "input_format": { "type": "string", "default": "What is the name of the model?" },
        "output_format": { "type": "string", "default": "What is the name of the model?" },
        "format": { "type": "string", "default": "What is the name of the model?" }
      }
    },
    "training_information": {
      "type": "object",
      "properties": {
        "training_methodology": { "type": "string", "default": "What is the name of the model?" },
        "training_data_overview": { "type": "string", "default": "What is the name of the model?" },
        "data_card_link": { "type": "string", "format": "uri" },
        "dependencies": { "type": "string", "default": "What is the name of the model?" }
      }
    },
    "evaluation_and_performance": {
      "type": "object",
      "properties": {
        "metrics": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "default": "What is the name of the model?" },
            "value": { "type": "number", "default": "What is the name of the model?" },
            "confidence_interval": {
              "type": "object",
              "properties": {
                "lower_bound": { "type": "number", "default": "What is the name of the model?" },
                "upper_bound": { "type": "number", "default": "What is the name of the model?" }
              }
            },
            "threshold": { "type": "string", "default": "What is the name of the model?" },
            "slice": { "type": "string", "default": "What is the name of the model?" }
          }
        },
        "evaluation_objective": { "type": "string", "default": "What is the name of the model?" },
        "benchmark_standard": { "type": "string", "default": "What is the name of the model?" }
      }
    },
    "deployment_and_operations": {
      "type": "object",
      "properties": {
        "infrastructure_requirements": { "type": "string", "default": "What is the name of the model?" },
        "serving_method": {
           "type": "string",
           "default": "How will this model be served?",
           "title": "Serving Method",
           "enum": ["API", "Batch Inference", "Etc."]
    },
        "deployment_constraints": { "type": "string", "default": "What is the name of the model?" },
        "visibility": { "type": "string", "default": "What is the name of the model?" }
      }
    },
    "limitations_and_constraints": {
      "type": "object",
      "properties": {
        "known_limitations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "performance_tradeoffs": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "security_and_risk_assessment": {
      "type": "object",
      "properties": {
        "security_card_link": { "type": "string", "format": "uri" },
        "robustness": { "type": "string" },
        "adversarial_robustness": { "type": "string" },
        "explainability": { "type": "string" },
        "risk_type": { "type": "string" },
        "mitigation_strategy": { "type": "string" }
      }
    },
    "custom_metadata": {
      "type": "object",
      "properties": {
        "classification": { "type": "string" },
        "sponsoring_organization": { "type": "string" },
        "development_organization": { "type": "string" },
        "additional_notes": { "type": "string" }
      }
    }
  }
}